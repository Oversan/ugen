{
  "name": "ugen",
  "version": "1.0.0",
  "description": "Scaffolding tool for new apps",
  "author": "Anton Borsch <anton.borsch@gmail.com>",
  "homepage": "https://github.com/Oversan/ugen",
  "repository": {
    "type": "git",
    "url": "https://github.com/Oversan/ugen.git"
  },
  "bugs": {
    "url": "https://github.com/Oversan/ugen/issues"
  },
  "keywords": [
    "cli-app",
    "cli",
    "dev",
    "development",
    "generator",
    "generate",
    "scaffold",
    "tool",
    "boilerplate",
    "build"
  ],
  "bin": {
    "ugen": "./bin/ugen"
  },
  "files": [
    "/bin",
    "/lib"
  ],
  "config": {
    "ghooks": {
      "pre-push": "npm run coverage && npm run codeclimate-coverage-push"
    }
  },
  "scripts": {
    "codeclimate-coverage-push": "CODECLIMATE_REPO_TOKEN=75937a8e785a7a8a5ae77406ab86398c3bb39ba558988fc38f64ae478478deb4 ./node_modules/.bin/codeclimate-test-reporter < ./coverage/lcov.info",
    "coverage-report": "open coverage/lcov-report/index.html",
    "coverage": "istanbul cover _mocha './tests/**/*.test.js' --include-all-sources true --verbose",
    "test": "./node_modules/.bin/mocha './tests/**/*.test.js' --full-trace --recursive"
  },
  "engines": {
    "node": ">=4.2.0"
  },
  "license": "MIT",
  "dependencies": {
    "chalk": "^1.1.3",
    "commander": "^2.9.0",
    "fs-extra": "^0.26.7",
    "glob": "^7.0.3",
    "inquirer": "^1.0.0",
    "lodash": "^4.11.0",
    "minimist": "^1.2.0",
    "mkdirp": "^0.5.1",
    "validator": "^5.2.0"
  },
  "devDependencies": {
    "bdd-stdin": "^0.2.0",
    "chai": "^3.5.0",
    "codeclimate-test-reporter": "^0.3.1",
    "fs-extra": "^0.26.7",
    "ghooks": "^1.2.1",
    "istanbul": "^0.4.3",
    "mocha": "^2.4.5",
    "mocha-lcov-reporter": "^1.2.0"
  }
}
